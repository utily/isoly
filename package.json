{
  "name": "isoly",
  "version": "0.0.41",
  "description": "Datatypes and functions specified by ISO-standards.",
  "author": "PayFunc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/payfunc/isoly"
  },
  "bugs": {
    "url": "https://github.com/payfunc/isoly/issues"
  },
  "homepage": "https://payfunc.com/open-source/isoly",
  "private": false,
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "git": {
    "tagName": "v${version}"
  },
  "github": {
    "release": true
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    },
    "testEnvironment": "node",
    "testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "node_modules/",
      "dist/"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js,jsx}",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "preset": "ts-jest",
    "testMatch": null
  },
  "scripts": {
    "dev": "watch 'npm run build' .",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "fix": "eslint '**/*.{js,ts,tsx}' --fix",
    "build": "tsc -p .",
    "test": "jest",
    "test:watch": "watch jest",
    "prepare": "npm run build",
    "clean": "rm -rf dist node_modules coverage"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^14.11.10",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "babel-core": "^6.26.3",
    "babel-jest": "^27.2.0",
    "eslint": "^7.32.0",
    "eslint-config-standardize": "^0.9.1",
    "eslint-plugin-prettierx": "github:robinnedergard/eslint-plugin-prettierx#master",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27",
    "prettierx": "github:robinnedergard/prettierx#newline-before-clause-sync",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3",
    "watch": "^1.0.2"
  }
}
