{
	"files.exclude": {
		".*": true,
		"*.json": true,
		"dist": true,
		"README.md": true,
		"LICENSE": true,
		"tsconfig.*": true
	},
	"editor.tabSize": 2,
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true,
		"eslint.autoFixOnSave": true,
	}
}
